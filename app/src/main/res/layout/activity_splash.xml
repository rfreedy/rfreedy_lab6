<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cse40333.rfreedy.rob_freedy_application.MainActivity"
    android:background="@color/dark_blue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notre_dame"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/notre_dame_size"
        android:textStyle="normal|bold" />

    <TextView
        android:text="@string/basketball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/basketball_margin_top"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@color/yellow" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/notredamelogo"
        android:id="@+id/imageButton"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:background="@color/dark_blue"
        android:maxWidth="@dimen/irish_width"
        android:maxHeight="@dimen/irish_height"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/lep_margin" />

</RelativeLayout>
